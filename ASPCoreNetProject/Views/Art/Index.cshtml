<script>

    function unlike(id) {
        if (document.getElementsByClassName('Art-' + id + '-H')[0].style.color == 'black') {
            var xhttp;
            console.log(id);
            xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    console.log("create" + id);
                    var p = document.getElementsByClassName('Art-' + id + '-H')
                    for (i = 0, len = p.length; i < len; i++) {
                        p[i].style.color = 'red';
                    }
                }
                else {
                    console.log(this.response);
                    var p = document.getElementsByClassName('Art-' + id + '-H')
                    for (i = 0, len = p.length; i < len; i++) {
                        p[i].style.color = 'black';
                    }
                }
            };
            xhttp.open("POST", "/favourite/Create/", true);
            xhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
            xhttp.send("artid=" + id);
        }
        else {
            var xhttp;
            xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    console.log("Delete" + id);
                    var p = document.getElementsByClassName('Art-' + id + '-H')
                    for (i = 0, len = p.length; i < len; i++) {
                        p[i].style.color = 'black';
                    }
                }
                else {
                    console.log(document.getElementById(id).style.color);
                    var p = document.getElementsByClassName('Art-' + id + '-H')
                    for (i = 0, len = p.length; i < len; i++) {
                        p[i].style.color = 'red';
                    }
                }
            };
            console.log(id);
            xhttp.open("POST", "/favourite/Delete/" + id, true);
            xhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
            xhttp.send("artid=" + id);
        }


    }
    function Delete(id) {
        var xhttp;

        xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                $('.Art-' + id + '-D').remove();
            }
            else {
                console.log("fewefwe");
            }
        };
        console.log(id);
        xhttp.open("POST", "/Art/Delete/" + id, true);
        xhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
        xhttp.send("artid=" + id);
    }



</script>
