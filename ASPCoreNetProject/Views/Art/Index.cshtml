                                            <img src="~/images/@item.UserPicture" class="rounded-circle mr-3" style="height:50px;width:50px" alt="avatar">

                                            <!-- Content -->
                                            <div>

                                                <!-- Title -->
                                                <h4 class="card-title font-weight-bold mb-2" onmouseover="style='cursor:pointer'" onclick="location.href='Art/ShowDetails/@item.ArtId'">@item.Name</h4>

                                                <!-- Subtitle -->
                                                <p class="card-text"><i class="far fa-clock pr-2"></i>@item.DateTime.ToShortDateString()</p>
                                            </div>

                                        </div>


