    <div class="row">

        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 ">
                    <nav>
                        <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                            <a class="nav-item nav-link active" id="nav-All-tab" data-toggle="tab" href="#nav-All" role="tab" aria-controls="nav-All" aria-selected="true">All</a>
                            <a class="nav-item nav-link" id="nav-Tableau-tab" data-toggle="tab" href="#nav-Tableau" role="tab" aria-controls="nav-Tableau" aria-selected="false">Tableau</a>
                            <a class="nav-item nav-link" id="nav-Sclupture-tab" data-toggle="tab" href="#nav-Sclupture" role="tab" aria-controls="nav-Sclupture" aria-selected="false">Sclupture</a>
                            <a class="nav-item nav-link" id="nav-Others-tab" data-toggle="tab" href="#nav-Others" role="tab" aria-controls="nav-Others" aria-selected="false">Others</a>
                        </div>
                    </nav>
                    <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
                        <div class="tab-pane fade show active container-fluid" id="nav-All" role="tabpanel" aria-labelledby="nav-All-tab">
                            <div class="row">
                                @foreach (var item in Model)
                                {



                                    <div id="@item.ID" class="card promoting-card col-md-4 p-0 m-0 Art-@item.ID">

                                        <!-- Card content -->
                                        <div class="card-body d-flex flex-row">

                                            <!-- Avatar -->
                                            <img src="~/images/@item.AppUser.ProfilePicture" class="rounded-circle mr-3" style="height:50px;width:50px" alt="avatar">

                                            <!-- Content -->
                                            <div>

                                                <!-- Title -->
                                                <h4 class="card-title font-weight-bold mb-2" onmouseover="style='cursor:pointer'" onclick="location.href='../Art/ShowDetails/@item.ID'">@item.Name</h4>
                                                <!-- Subtitle -->
                                                <p class="card-text"><i class="far fa-clock pr-2"></i>@item.dateTime.ToShortDateString()</p>
                                            </div>

                                        </div>

                                        <!-- Card image -->
                                        <div class="view overlay">
                                            <img class="card-img-top rounded-0  img-fluid" onclick="location.href='../Art/ShowDetails/@item.ID'" style="width:100%;height:200px" src="~/Images/@item.Photos.FirstOrDefault().Path">
                                            <a asp-action="ShowDetails" asp-controller="Art" asp-route-id="@item.ID">
                                                <div class="mask rgba-white-slight"></div>
                                            </a>
                                        </div>

                                        <!-- Card content -->
                                        <div class="card-body">

                                            <div class="collapse-content">
                                                <span>
                                                    Type: @item.TypeOfArt
                                                </span>
                                                <br />
                                                <span class="text-muted">
                                                    Price: @item.Price
                                                </span>
                                                @if (User.Identity.IsAuthenticated)
                                                {

                                                    <a id="@item.ID" style="font-size:30px;color:red"
                                                       class="card-link" onclick="unlike(@item.ID)">
                                                        <i class="fas fa-heart float-right"></i>
                                                    </a>

                                                }
                                            </div>

                                        </div>

                                    </div>

                                }
